<Window x:Class="LampService.Dialog.MessageBoxMinDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示" Height="150" Width="250" WindowStartupLocation="CenterOwner" Icon="/LampService;component/LightServer.ico" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Background="#FFF9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" Text="是否退出系统？" FontSize="18" />
        <StackPanel Margin="10" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="50" Content="退出" Name="btnExit" Click="btnExit_Click" IsDefault="True" />
            <Button Width="50" Margin="10,0,10,0" Content="取消" Name="btnCancel" Click="btnCancel_Click" IsCancel="True" />
            <Button Width="50" Content="最小化" Name="btnMin" Click="btnMin_Click" />
        </StackPanel>
    </Grid>
</Window>
