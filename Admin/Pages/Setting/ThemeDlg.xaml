<mui:ModernDialog x:Class="Admin.Pages.Setting.ThemeDlg"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Width="600" MinWidth="600" MinHeight="500"
                  Title="皮肤设置">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->

    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Setting/SettingsAppearance.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="主题颜色" Source="/Pages/Setting/SettingsAppearance.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
    
</mui:ModernDialog>
