@{
    Layout = null;
}

@using (Ajax.BeginForm("ChangePassword", "Shared", new { Area = "Lamp" }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "divDlg", HttpMethod = "Post" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="modal-content" style="width:600px;min-height:331.883px;margin-left:83px;margin-top:5%;">
        <div class="modal-header" style="background-color:#bfcad1;">
            <button id="closebtn1" type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">
                <i class="icon-pencil"></i>
                <span style="font-weight:bold">修改密码</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12" style="margin-bottom:20px;">
                    <div class="form-group">
                        <label class="control-label col-md-2" style="text-align: right;margin-bottom: 0;padding-top: 7px;">旧密码</label>
                        <div class="col-md-10">
                            <input id="oldpsd" name="oldpsd" type="password" class="form-control" placeholder="旧密码">
                        </div>
                    </div>
                </div>
                <div class="col-md-12" style="margin-bottom:20px;">
                    <div class="form-group">
                        <label class="control-label col-md-2" style="text-align: right;margin-bottom: 0;padding-top: 7px;">新密码</label>
                        <div class="col-md-10">
                            <input id="newpsd1" name="newpsd1" type="password" class="form-control" placeholder="新密码" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12" style="margin-bottom:20px;">
                    <div class="form-group">
                        <label class="control-label col-md-2" style="text-align: right;margin-bottom: 0;padding-top: 7px;">确认密码</label>
                        <div class="col-md-10">
                            <input name="newpsd2" id="newpsd2" type="password" class="form-control" placeholder="确认密码">
                        </div>
                    </div>
                </div>
                @*<div class="col-md-12" style="margin-left:30px;">
                    <span style=" color:red">@ViewBag.ChangePasswordResult</span>
                    </div>*@
                <div class="alert alert-danger col-md-2" style="width:93%;margin-bottom:0px;margin-left:20px;margin-right:20px;display:@ViewBag.Display">
                    <button class="close" type="button" data-close="alert"></button>
                    <span id="alertInfo">@ViewBag.ChangePasswordResult</span>
                </div>
            </div>
        </div>
        <div class="modal-footer">

            <button type="submit" class="btn sbold green" style="margin:0px 10px 0px 10px;">确定</button>
            <button type="button" class="btn sbold blue-dark " style="margin:0px 10px 0px 10px;" data-dismiss="modal">取消</button>
        </div>
    </div>

}




